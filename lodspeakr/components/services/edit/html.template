<script>
var datasetEditors = [];
var home = "{{lodspk.home}}";
var datasets = [];
datasets.push({uri: "{{lodspk.args.all|deurifier}}", json: "{{first.jsonfile.jsonURL.value}}"});
</script>

<script src="{{lodspk.home}}js/extras.js"></script>
<script src="{{lodspk.home}}js/editor.js"></script>
<script>

$(function(){




  $.ajax({
    url: home+"datasets",
    dataType: "json",
    contentType:"application/json; charset=utf-8",
    success: function(data){
      var options = "";
      $.each(data.datasets, function(i, item){
        options += "<option value='"+item.download+"'>"+item.name+"</option>";
      });
      $("#dataset-list").append(options);
    }
  });
  

function loadVisualization(vizConfig){
  viz = vizConfig.visualization;
  $.ajax({
    url: viz.dataset,
    dataType: "json",
    contentType:"application/json; charset=utf-8",
    success: function(d){
      console.log(d);
       var config = {
        sortcol: "",
        div: "dataset0",
        dataset: viz.dataset,
        columns: [],
        data: d.rows,
        headerColumns: [],
        searchField: "",
        title: "asd",
        editorId: datasetEditors.length,
      }
      if(typeof(config.headerColumns) == 'array'){
        searchField = config.headerColumns[0];
      }
      for(var i in d.header){
        config.columns.push({id: d.header[i].value, name: d.header[i].name, field: d.header[i].value, cssClass: "cell-title", sortable: true });
      }
      config.data = d.rows;
      if(typeof(config.headerColumns) == 'array'){
        config['sortcol'] = config.headerColumns[0];
      }else{
        config['sortcol'] = "";
      }
      i = datasetEditors.length;
      datasetEditors[i] = new Editor;
      datasetEditors[i].init(config);
      datasetEditors[i].setData(d.rows);
      datasetEditors[i].showTable();
      datasetEditors[i].fillHeaders();
      var options = "";
      $.each(datasetEditors[i].columns, function(j, item){
        var selected = "";
        if(item.field == "Region"){
          datasetEditors[i].searchField = item.field;
          selected = "selected";
        }
        options += "<option value='"+item.field+"' "+selected+">"+item.name+"</option>";
      });
      datasetEditors[i].updateFilter();
      $(".fieldSearch."+datasetEditors[i].div).html(options);
      if(viz.chartType == "MapVisualization"){
        datasetEditors[i].renderMap(viz);
      }else{
        datasetEditors[i].renderChart(viz);
      }
    }    
  })
}

//Get visualization
$.ajax({
    url: "{{lodspk.args.all|deurifier}}",
    dataType: "json",
    async: false,
    contentType:"application/json; charset=utf-8",
    success: function(data){
      console.log("{{lodspk.args.all|deurifier}}", data);
      loadVisualization(data);
    },
    error: function (xhr, ajaxOptions, thrownError) {
        alert(xhr.status);
        alert(thrownError);
      }
  });

});
</script>
